{
  "name": "portfolio",
  "version": "1.0.0",
  "main": "index.html",
  "scripts": {
   "minify:css": "cleancss -o main.min.css src/main.css",
    "minify:html": "html-minifier src/index.html -o index.html --collapse-whitespace --remove-comments --minify-css true --minify-js true",
    "minify:js": "terser src/script.js -o script.min.js -c -m",
    "build": "npm run minify:css && npm run minify:html && npm run minify:js"
  },
  "author": "Luan Alves",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "clean-css-cli": "^5.6.3",
    "html-minifier": "^4.0.0",
    "terser": "^5.36.0"
  }
}
